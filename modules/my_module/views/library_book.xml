<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<act_window
				id="library_book_action"
				name="Library Books"
                view_mode="kanban,form,tree"
				res_model="library.book" />

		<menuitem
				id="library_book_menu"
				name="Library"
				action="library_book_action"
				parent=""
				sequence="5" />

        <record id="library_book_kanban" model="ir.ui.view">
            <field name="name">Library Book</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <field name="name"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

		<record id="library_book_form" model="ir.ui.view">
			<field name="name">Library Book Form</field>
		  	<field name="model">library.book</field>
		  	<field name="arch" type="xml">
				<form>
					<header>
						<button name="do_something_with_record"
								string="Do something"
								type="object"
								class="oe_highlight"/>
						<button name="do_something_else"
								string="Second action"/>
						<field name="state" widget="statusbar"/>

					</header>
                    <sheet>
                        <div class="oe_left oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="author_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="date_release"/>
                            <field name="age_days"/>
                        </group>
                    </sheet>

				</form>
		  	</field>
		</record>

		<record id="library_book_tree" model="ir.ui.view">
			<field name="name">Library Book List</field>
			<field name="model">library.book</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="date_release"/>
				</tree>
			</field>
		</record>

		<record id="library_book_search" model="ir.ui.view">
			<field name="name">Library Book Search</field>
			<field name="model">library.book</field>
			<field name="arch" type="xml">
				<search>
					<field name="name"/>
					<field name="author_ids"/>
					<field name="age_days"/>
					<filter string="No Authors" domain="[('author_ids','=',False)]"/>
				</search>
			</field>
		</record>

	</data>
</odoo>